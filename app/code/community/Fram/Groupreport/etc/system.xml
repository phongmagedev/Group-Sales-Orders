<?xml version="1.0"?>
<config>
	  <tabs>
		<framco_advanced_cms translate="label" module="groupreport">
            <label>Framco</label>
            <sort_order>999</sort_order>
        </framco_advanced_cms>
	  </tabs>
	  <sections>
		<fram_groupreport  translate="label" module="groupreport">
		<label>Report Group Configuration</label>
		<tab>framco_advanced_cms</tab>
		<frontend_type>text</frontend_type>
		<sort_order>70</sort_order>
		<show_in_default>1</show_in_default>
		<show_in_website>1</show_in_website>
		<show_in_store>1</show_in_store>
					<groups>
						<lifesales translate="label">
							<label>Lifetime Sales Configuration</label>
							<frontend_type>text</frontend_type>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<expanded>1</expanded>
							<fields>
								<enable translate="label">
									<label>Enable</label>
									<frontend_type>select</frontend_type>
									<source_model>adminhtml/system_config_source_yesno</source_model>
									<sort_order>0</sort_order>
									<show_in_default>1</show_in_default>
									<show_in_website>1</show_in_website>
									<show_in_store>1</show_in_store>
									<comment>Enable/Disable - Allow append report box in dashboard adminhtml page</comment>
								</enable>
								<customer_group translate="label">
									<label>Separated For Customer group</label>
									<frontend_type>multiselect</frontend_type>
									<source_model>groupreport/system_config_source_customer_group</source_model>
									<sort_order>10</sort_order>
									<show_in_default>1</show_in_default>
									<show_in_website>1</show_in_website>
									<show_in_store>1</show_in_store>
									<comment>Report on dashboard will be separated follow this customer group</comment>
								</customer_group>
								<remove_default_lifesales translate="label">
									<label>Remove Default Lifetime Sales</label>
									<frontend_type>select</frontend_type>
									<source_model>adminhtml/system_config_source_yesno</source_model>
									<sort_order>30</sort_order>
									<show_in_default>1</show_in_default>
									<show_in_website>1</show_in_website>
									<show_in_store>1</show_in_store>
								</remove_default_lifesales>

							</fields>
						</lifesales>
						<config translate="label">
							<label>Last Orders Configuration</label>
							<frontend_type>text</frontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<expanded>1</expanded>
							<fields>
								<enable translate="label">
									<label>Enable</label>
									<frontend_type>select</frontend_type>
									<source_model>adminhtml/system_config_source_yesno</source_model>
									<sort_order>0</sort_order>
									<show_in_default>1</show_in_default>
									<show_in_website>1</show_in_website>
									<show_in_store>1</show_in_store>
									<comment>Enable/Disable - Allow append report box in dashboard adminhtml page</comment>
								</enable>
								<customer_group translate="label">
									<label>Separated For Customer group</label>
									<frontend_type>multiselect</frontend_type>
									<source_model>groupreport/system_config_source_customer_group</source_model>
									<sort_order>10</sort_order>
									<show_in_default>1</show_in_default>
									<show_in_website>1</show_in_website>
									<show_in_store>1</show_in_store>
									<comment>Report on dashboard will be separated follow this customer group</comment>
								</customer_group>
								<limit_last_orders translate="label">
									<label>Limit last orders</label>
									<frontend_type>text</frontend_type>
									<sort_order>20</sort_order>
									<show_in_default>1</show_in_default>
									<show_in_website>1</show_in_website>
									<show_in_store>1</show_in_store>
									<comment>Limit number last order</comment>
								</limit_last_orders>
								<remove_default_last_orders translate="label">
									<label>Remove Default Last Orders</label>
									<frontend_type>select</frontend_type>
									<source_model>adminhtml/system_config_source_yesno</source_model>
									<sort_order>30</sort_order>
									<show_in_default>1</show_in_default>
									<show_in_website>1</show_in_website>
									<show_in_store>1</show_in_store>
								</remove_default_last_orders>
							</fields>
						</config>
						<separated_orders translate="label">
							<label>Separated Orders Configuration</label>
							<frontend_type>text</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<expanded>1</expanded>
							<fields>
								<enable translate="label">
									<label>Enable</label>
									<frontend_type>select</frontend_type>
									<source_model>adminhtml/system_config_source_yesno</source_model>
									<sort_order>0</sort_order>
									<show_in_default>1</show_in_default>
									<show_in_website>1</show_in_website>
									<show_in_store>1</show_in_store>
									<comment>Enable/Disable - Append order tab for customer group</comment>
								</enable>
								<customer_group translate="label">
									<label>Separated For Customer group</label>
									<frontend_type>select</frontend_type>
									<source_model>groupreport/system_config_source_customer_group</source_model>
									<sort_order>10</sort_order>
									<show_in_default>1</show_in_default>
									<show_in_website>1</show_in_website>
									<show_in_store>1</show_in_store>
									<comment>This will seperated order of this customer group with another rest of customer group in system.
										Example : if this is Retailer , this module will separated orders between retailer - all of another customer group
									</comment>
								</customer_group>
								<name_separated_group translate="label">
									<label>Name of separated order group</label>
									<frontend_type>text</frontend_type>
									<sort_order>20</sort_order>
									<show_in_default>1</show_in_default>
									<show_in_website>1</show_in_website>
									<show_in_store>1</show_in_store>
									<comment>Order of Retailer Group</comment>
								</name_separated_group>
								<name_another_group translate="label">
									<label>Name of rest of order group</label>
									<frontend_type>text</frontend_type>
									<sort_order>30</sort_order>
									<show_in_default>1</show_in_default>
									<show_in_website>1</show_in_website>
									<show_in_store>1</show_in_store>
									<comment>Order of private customer</comment>
								</name_another_group>
							</fields>
						</separated_orders>
					</groups>
		</fram_groupreport>
	  </sections>
</config>
